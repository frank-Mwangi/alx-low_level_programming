CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

clean: 
	${RM} *~ ${NAME}
all: m.h $(OBJ)
	${CC} -Wall -Werror -Wextra -pedantic main.o school.o -o ${NAME}
oclean:
	${RM} $(OBJ)
fclean: clean oclean
re: fclean all
